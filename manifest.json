{
  "manifest_version": 3,
  "name": "Shortly - Custom URL Shortener",
  "version": "1.0",
  "description": "Create custom short links with a prefix. Type 'go/yourlink' to redirect to your saved URLs.",
  "permissions": [
    "storage",
    "tabs",
    "omnibox",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shortly - Manage your short links",
    "default_icon": {
      "16": "icons/icon_16.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    }
  },
  "omnibox": {
    "keyword": "go"
  }
}